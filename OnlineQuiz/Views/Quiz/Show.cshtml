@model List<Question>

<h2>Questions</h2>
<form method="post" action="/Quiz/SubmitAnswers">
@foreach (var question in Model)
{
    <div>
        <h3>@question.Name</h3>

        <ul>
            @foreach (var choice in question.Choices)
            {
                    <li>
                        <input type="radio" name="answers[@question.Id]" value="@choice.Name" />
                        @choice.Name
                    </li>
            }
        </ul>
    </div>
}
    <button type="submit" style="background-color: blue; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">
        Submit Answers
    </button>

</form>

